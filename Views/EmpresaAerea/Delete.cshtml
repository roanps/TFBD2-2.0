@model VoeMais.Models.EmpresaAerea
@{
    ViewData["Title"] = "Excluir Empresa";
}
<h2>@ViewData["Title"]</h2>

<p>Tem certeza que deseja excluir esta empresa?</p>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.IdEmpresa</dd>

    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.Nome</dd>

    <dt class="col-sm-2">Telefone</dt>
    <dd class="col-sm-10">@Model.Telefone</dd>

    <dt class="col-sm-2">CNPJ</dt>
    <dd class="col-sm-10">@Model.Cnpj</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdEmpresa" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
