@model VoeMais.Models.Escala

@{
    ViewData["Title"] = "Criar Escala";
}

<h2>Criar Escala</h2>

<form asp-action="Create" method="post">

    <div class="form-group mb-3">
        <label class="form-label">Voo</label>
        <select class="form-control" name="idVoo" asp-items="ViewBag.Voos">
            <option value="">Selecione um voo</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Aeroporto da Escala</label>
        <select asp-for="IdAeroportoEscala" class="form-control" asp-items="ViewBag.Aeroportos">
            <option value="">Selecione o aeroporto</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Chegada</label>
        <input asp-for="ChegadaEscala" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Sa√≠da</label>
        <input asp-for="SaidaEscala" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
