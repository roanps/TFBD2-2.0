@model VoeMais.Models.Escala

@{
    ViewData["Title"] = "Detalhes da Escala";
}

<h2>Detalhes da Escala</h2>
<hr />

<div class="card p-3 mb-4">

    <p><strong>ID da Escala:</strong> @Model.IdEscala</p>
    <p>
        <strong>Aeroporto:</strong>
        @Model.AeroportoEscala?.CodigoIATA - @Model.AeroportoEscala?.Nome
    </p>

    <p><strong>Chegada:</strong> @Model.ChegadaEscala</p>
    <p><strong>Sa√≠da:</strong> @Model.SaidaEscala</p>

    <h4>Voos vinculados</h4>

    @if (Model.VoosEscalas != null && Model.VoosEscalas.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID Voo</th>
                    <th>Origem</th>
                    <th>Destino</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ve in Model.VoosEscalas)
                {
                    <tr>
                        <td>@ve.Voo.IdVoo</td>
                        <td>@ve.Voo.Origem?.CodigoIATA</td>
                        <td>@ve.Voo.Destino?.CodigoIATA</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">Nenhum voo vinculado a esta escala.</div>
    }

</div>

<a asp-action="Edit" asp-route-id="@Model.IdEscala" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
