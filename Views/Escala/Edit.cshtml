@model VoeMais.Models.Escala

@{
    ViewData["Title"] = "Editar Escala";
}

<h2>Editar Escala</h2>

<form asp-action="Edit">

    <input type="hidden" asp-for="IdEscala" />

    <div class="form-group mb-3">
        <label class="form-label">Aeroporto da Escala</label>
        <select asp-for="IdAeroportoEscala" class="form-control" asp-items="ViewBag.Aeroportos"></select>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Chegada</label>
        <input asp-for="ChegadaEscala" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Saída</label>
        <input asp-for="SaidaEscala" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>
