@model VoeMais.Models.Voo
@{
    ViewData["Title"] = "Excluir Voo";
}
<h2>@ViewData["Title"]</h2>

<p>Tem certeza que deseja excluir este registro?</p>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.IdVoo</dd>

    <dt class="col-sm-2">ID Aeronave</dt>
    <dd class="col-sm-10">@Model.IdAeronave</dd>

    <dt class="col-sm-2">Aeroporto Origem</dt>
    <dd class="col-sm-10">@Model.IdAeroportoOrigem</dd>

    <dt class="col-sm-2">Partida</dt>
    <dd class="col-sm-10">@Model.Partida</dd>

    <dt class="col-sm-2">Aeroporto Destino</dt>
    <dd class="col-sm-10">@Model.IdAeroportoDestino</dd>

    <dt class="col-sm-2">Chegada</dt>
    <dd class="col-sm-10">@Model.Chegada</dd>


</dl>

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
