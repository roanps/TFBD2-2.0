@model VoeMais.Models.Aviao

@{
    ViewData["Title"] = "Cadastrar Avião";
}

<h2 class="mb-3">Cadastrar Avião</h2>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Modelo" class="form-label"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Prefixo" class="form-label"></label>
        <input asp-for="Prefixo" class="form-control" />
        <span asp-validation-for="Prefixo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacidade" class="form-label"></label>
        <input asp-for="Capacidade" type="number" min="1" class="form-control" />
        <span asp-validation-for="Capacidade" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EmpresaAereaId" class="form-label"></label>
        <select asp-for="EmpresaAereaId" class="form-select" asp-items="ViewBag.EmpresaAereaId">
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="EmpresaAereaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
