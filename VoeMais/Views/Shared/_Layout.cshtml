@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - VoeMais</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f3f4f7;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            background-color: #0d6efd;
            color: white;
            top: 0;
            left: 0;
            padding-top: 20px;
        }

        .sidebar h3 {
            text-align: center;
            font-weight: 600;
            margin-bottom: 25px;
        }

        .sidebar a {
            display: block;
            padding: 12px 20px;
            font-size: 16px;
            color: white;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: rgba(255, 255, 255, 0.15);
        }

        .topbar {
            margin-left: 240px;
            height: 60px;
            background: #ffffff;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            padding: 0 20px;
            font-weight: 600;
            font-size: 18px;
        }

        .content {
            margin-left: 240px;
            padding: 25px;
        }

        footer {
            margin-left: 240px;
            padding: 15px;
            text-align: center;
            color: #777;
        }
    </style>
</head>

<body>

    <div class="sidebar">
        <h3>VoeMais</h3>

        <a href="/"><i class="bi bi-house-door"></i> Início</a>

        <a href="/EmpresaAerea"><i class="bi bi-building"></i> Empresas Aéreas</a>
        <a href="/Aeroporto"><i class="bi bi-geo-alt"></i> Aeroportos</a>
        <a href="/Aviao"><i class="bi bi-airplane"></i> Aviões</a>
        <a href="/Poltrona"><i class="bi bi-grid"></i> Poltronas</a>
        <a href="/Voo"><i class="bi bi-send"></i> Voos</a>
        <a href="/Escala"><i class="bi bi-stopwatch"></i> Escalas</a>

        <a href="/Cliente"><i class="bi bi-people"></i> Clientes</a>
        <a href="/Passagem"><i class="bi bi-ticket"></i> Passagens</a>
    </div>

    <div class="topbar">
        @ViewData["Title"]
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer>
        VoeMais • Sistema Gerenciador de Aeroportos — 2025
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
