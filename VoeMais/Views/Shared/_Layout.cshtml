@using Microsoft.AspNetCore.Mvc.Rendering
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VoeMais</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background-color: #0d6efd;
            color: white;
            padding-top: 20px;
            flex-shrink: 0;
            height: 100vh;
            position: fixed;
        }

            .sidebar h4 {
                text-align: center;
                margin-bottom: 20px;
                font-weight: bold;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 12px 20px;
            }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.2);
                }

        .content-area {
            margin-left: 250px;
            padding: 25px;
            width: 100%;
        }

        footer {
            margin-top: 40px;
            text-align: center;
            color: #777;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h4>✈ VoeMais</h4>

        <a href="/Home/Menu"> Início</a>
        <a href="/Aeroporto"> Aeroportos</a>
        <a href="/EmpresaAerea"> Empresas Aéreas</a>
        <a href="/Aviao">✈ Aviões</a>
        <a href="/Poltrona"> Poltronas</a>
        <a href="/Voo"> Voos</a>
        <a href="/Escala"> Escalas</a>
        <a href="/Cliente"> Clientes</a>
        <a href="/Passagem"> Passagens</a>
    </div>

    <div class="content-area">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer>
            <p>VoeMais • Sistema Gerenciador de Aeroportos - @DateTime.Now.Year</p>
        </footer>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
